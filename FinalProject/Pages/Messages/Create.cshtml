@page
@model FinalProject.Pages.Messages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApartmentId" />
            @if (!User.IsInRole("Tenant"))
            {
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="SelectedReceiver" class="control-label">To: </label>
                    <select asp-for="SelectedReceiver" class="form-control" asp-items="Model.Receivers"></select>
                    <span asp-validation-for="SelectedReceiver" class="text-danger"></span>
                </div>
            }


            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Message.Subject" class="control-label"></label>
                <input asp-for="Message.Subject" class="form-control" />
                <span asp-validation-for="Message.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label"></label>
                <input asp-for="Message.Content" class="form-control" />
                <span asp-validation-for="Message.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
