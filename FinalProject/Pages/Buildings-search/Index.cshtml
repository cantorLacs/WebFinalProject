@page
@model FinalProject.Pages.Buildings_search.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Buildings</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Building[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Building[0].Address)</th>
            <th>@Html.DisplayNameFor(model => model.Building[0].Description)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Building)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.BuildingId">Details</a>
                    <a asp-page="/Apartments-search/Index" asp-route-id="@item.BuildingId">Aptos</a>
                </td>
            </tr>
        }
    </tbody>
</table>