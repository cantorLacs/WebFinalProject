@page
@model FinalProject.Pages.Buildings_search.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].ManagerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].RegistrationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Building) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BuildingId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BuildingId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BuildingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
